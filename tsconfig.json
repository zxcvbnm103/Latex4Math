{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2018",
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": false,
    "outDir": "./lib",
    "downlevelIteration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "DOM",
      "ES2018"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "main.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "**/*.test.ts",
    "test-*.js"
  ]
}